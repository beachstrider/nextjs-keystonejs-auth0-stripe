datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id                 String   @id @default(cuid())
  name               String   @default("")
  company            String   @default("")
  address            String   @default("")
  email              String   @unique @default("")
  password           String
  vendor             Vendor[] @relation("Vendor_user")
  plan               String   @default("")
  customerId         String   @default("")
  subscriptionId     String   @default("")
  subscriptionStatus String   @default("no")
}

model Vendor {
  id               String  @id @default(cuid())
  organizationName String  @default("")
  vendorEmail      String  @default("")
  status           String? @default("SUBMITTED")
  user             User?   @relation("Vendor_user", fields: [userId], references: [id])
  userId           String? @map("user")

  @@index([userId])
}

model Company {
  id      String   @id @default(cuid())
  name    String   @default("")
  summary String   @default("")
  content String   @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  year    DateTime
}